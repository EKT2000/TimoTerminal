<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginVertical="10dp"
    android:layout_marginEnd="10dp"
    tools:context=".fragmentViews.UserSettingsFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/view_recycler_user"
        android:layout_width="400dp"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/item_user" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_form"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/view_recycler_user"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button_user_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            app:layout_constraintEnd_toStartOf="@id/button_user_delete"
            app:layout_constraintStart_toStartOf="@id/layout_form"
            app:layout_constraintTop_toTopOf="@id/layout_form"
            android:text="Save User" />

        <Button
            android:id="@+id/button_user_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            app:layout_constraintEnd_toEndOf="@id/layout_form"
            app:layout_constraintStart_toEndOf="@id/button_user_save"
            app:layout_constraintTop_toTopOf="@id/layout_form"
            android:text="Delete User" />

        <Button
            android:id="@+id/button_user_load"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            app:layout_constraintBottom_toBottomOf="@id/layout_form"
            app:layout_constraintEnd_toEndOf="@id/layout_form"
            app:layout_constraintStart_toStartOf="@id/layout_form"
            android:text="Load User" />

        <TextView
            android:id="@+id/text_view_id"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="@id/layout_form"
            app:layout_constraintStart_toStartOf="@id/layout_form"
            app:layout_constraintTop_toBottomOf="@id/button_user_save"
            tools:text="1"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_layout_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="User name"
            app:layout_constraintEnd_toEndOf="@id/layout_form"
            app:layout_constraintStart_toStartOf="@id/layout_form"
            app:layout_constraintTop_toBottomOf="@id/text_view_id">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/text_input_edit_text_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Name" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_layout_pin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="Passcode"
            app:layout_constraintEnd_toEndOf="@id/layout_form"
            app:layout_constraintStart_toStartOf="@id/layout_form"
            app:layout_constraintTop_toBottomOf="@id/text_input_layout_name">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/text_input_edit_text_pin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                tools:text="824798" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_layout_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="Card"
            app:layout_constraintEnd_toEndOf="@id/layout_form"
            app:layout_constraintStart_toStartOf="@id/layout_form"
            app:layout_constraintTop_toBottomOf="@id/text_input_layout_pin">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/text_input_edit_text_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="98203580932" />

        </com.google.android.material.textfield.TextInputLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>