<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:backgroundTint="?attr/colorPrimaryContainer"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_container_16dp"
    android:layout_margin="10dp"
    android:orientation="vertical"
    app:cardCornerRadius="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:elevation="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/text_view_bu_booking_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            style="@style/TextAppearance.Material3.LabelMedium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="1" />

        <TextView
            android:id="@+id/text_view_bu_booking_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginStart="10dp"
            style="@style/TextAppearance.Material3.HeadlineSmall"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/text_view_bu_booking_id"
            app:layout_constraintEnd_toStartOf="@id/text_view_bu_booking_date"
            tools:text="Kommen" />

        <TextView
            android:id="@+id/text_view_bu_booking_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginStart="10dp"
            style="@style/TextAppearance.Material3.HeadlineSmall"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/text_view_bu_booking_status"
            app:layout_constraintEnd_toStartOf="@id/image_view_bu_isSend_icon"
            tools:text="14.12.2023 10:27:12" />

        <ImageView
            android:id="@+id/image_view_bu_isSend_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            tools:src="@drawable/terminal_booking_sended"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/text_view_bu_booking_user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            style="@style/TextAppearance.Material3.HeadlineSmall"
            app:layout_constraintTop_toBottomOf="@id/text_view_bu_booking_status"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Vorname Administrator" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>